{
  "manifest_version": 2,
  "name": "Pixiv Assistant",
  "description": "Adds tag translation, a suite of enhancements, and repository management to Pixiv",
  "version": "0.2",

  "browser_action": {
  	"default_icon": "resources/pa-icon-38.png",
  	"default_title": "Pixiv Assistant",
  	"default_popup": "vendor/chrome/popup/popup.html"
  },
  "content_scripts": [{
  	"matches": [
  		"http://*.pixiv.net/*"
  	],
  	"js": [
      "vendor/chrome/content.min.js"
  	],
    "css": ["resources/inject.css"]
  }],
  "background": {
    "scripts": [
      "vendor/chrome/background.min.js"
    ]
  },
  "permissions": [
    "storage",
    "bookmarks",
    "downloads",
    "http://*.pixiv.net/*",
    "http://api.github.com/*",
    "https://cdn.rawgit.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "icons": {
    "128": "resources/pa-icon-128.png"
  },
  "web_accessible_resources": [
    "common/*",
    "jspm_packages/*",
    "src/*",
    "vendor/chrome/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
