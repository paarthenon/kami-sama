{
  "manifest_version": 2,
  "name": "Pixiv Assistant",
  "description": "Adds functionality for tag translation and other features for power users",
  "version": "0.1",

  "browser_action": {
  	"default_icon": "icon-38.png",
  	"default_title": "Pixiv Assistant",
  	"default_popup": "popup.html"
  },
  "content_scripts": [{
  	"matches": [
  		"http://www.pixiv.net/*"
  	],
  	"js": [
  		"jquery-2.2.3.min.js",
  		"pixiv-assistant.js"
  	]
  }]
}
