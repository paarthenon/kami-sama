{
  "manifest_version": 2,
  "name": "Pixiv Assistant",
  "description": "Adds functionality for tag translation and other features for power users",
  "version": "0.1.8",

  "browser_action": {
  	"default_icon": "resources/pa-icon-38.png",
  	"default_title": "Pixiv Assistant",
  	"default_popup": "popup/popup.html"
  },
  "content_scripts": [{
  	"matches": [
  		"http://*.pixiv.net/*"
  	],
  	"js": [
  		"resources/jquery-2.2.3.min.js",
  		"pixiv-assistant.js"
  	],
    "css": ["resources/inject.css"]
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "storage",
    "bookmarks",
    "downloads",
    "http://*/",
    "https://*/"
  ],
  "icons": {
    "128": "resources/pa-icon-128.png"
  }
}
