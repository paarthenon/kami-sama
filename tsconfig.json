{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "outDir": "build/es6",
        "rootDir": ".",
        "baseUrl": ".",
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "paths": {
            "popup/*" : ["vendor/chrome/popup/*"],
            "content/*" : ["src/*"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "vendor/chrome/**/*.ts",
        "vendor/chrome/**/*.tsx"    
    ]
}
