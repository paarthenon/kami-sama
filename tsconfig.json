{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "removeComments": true,
        "outDir": "build/es6",
        "rootDir": ".",
        "baseUrl": ".",
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "paths": {
            "popup/*" : ["vendor/chrome/popup/*"],
            "content/*" : ["src/*"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "typings/index.d.ts"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "vendor/chrome/**/*.ts",
        "vendor/chrome/**/*.tsx"
    ]
}
